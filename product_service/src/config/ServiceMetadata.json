{
  "name": "product-service",
  "version": "1.0.0",
  "endpoints": [
    {
      "path": "/api/products",
      "method": "POST",
      "description": "Create a new product.",
      "auth": {
        "type": "jwt",
        "roles": ["admin"]
      }
    },
    {
      "path": "/api/products",
      "method": "GET",
      "description": "Get all products with details.",
      "auth": {
        "type": "jwt",
        "roles": ["user", "admin"]
      }
    },
    {
      "path": "/api/products/:id",
      "method": "GET",
      "description": "Retrieve a single product by ID.",
      "params": ["id"],
      "auth": {
        "type": "jwt",
        "roles": ["user", "admin"]
      }
    },
    {
      "path": "/api/products/:id",
      "method": "PUT",
      "description": "Update a product by ID.",
      "params": ["id"],
      "auth": {
        "type": "jwt",
        "roles": ["admin"]
      }
    },
    {
      "path": "/api/products/:id",
      "method": "DELETE",
      "description": "Delete a product by ID.",
      "params": ["id"],
      "auth": {
        "type": "jwt",
        "roles": ["admin"]
      }
    },
    {
      "path": "/api/products",
      "method": "DELETE",
      "description": "Delete all products.",
      "auth": {
        "type": "jwt",
        "roles": ["admin"]
      }
    },

    {
      "path": "/api/products/details/:id",
      "method": "POST",
      "description": "Create product details for a product.",
      "params": ["id"],
      "auth": {
        "type": "jwt",
        "roles": ["admin"]
      }
    },
    {
      "path": "/api/products/details/:id",
      "method": "PUT",
      "description": "update  product details for a product.",
      "params": ["id"],
      "auth": {
        "type": "jwt",
        "roles": ["admin"]
      }
    },
    {
      "path": "/api/products/details/:id",
      "method": "DELETE",
      "description": "delete  product details for a product.",
      "params": ["id"],
      "auth": {
        "type": "jwt",
        "roles": ["admin"]
      }
    },

    {
      "path": "/api/categories",
      "method": "POST",
      "description": "Create a new category .",
      "auth": {
        "type": "jwt",
        "roles": ["admin"]
      }
    },
    {
      "path": "/api/categories",
      "method": "GET",
      "description": "Get all categories .",
      "auth": {
        "type": "jwt",
        "roles": ["user", "admin"]
      }
    },
    {
      "path": "/api/categories/:id",
      "method": "GET",
      "description": "Retrieve a single category  by ID.",
      "params": ["id"],
      "auth": {
        "type": "jwt",
        "roles": ["admin"]
      }
    },
    {
      "path": "/api/categories/:id",
      "method": "PUT",
      "description": "Update a category by ID.",
      "params": ["id"],
      "auth": {
        "type": "jwt",
        "roles": ["admin"]
      }
    },
    {
      "path": "/api/categories/:id",
      "method": "DELETE",
      "description": "Delete a category by ID.",
      "params": ["id"],
      "auth": {
        "type": "jwt",
        "roles": ["admin"]
      }
    },
    {
      "path": "/api/categories",
      "method": "DELETE",
      "description": "Delete all categories.",
      "auth": {
        "type": "jwt",
        "roles": ["admin"]
      }
    },

    {
      "path": "/api/discounts",
      "method": "POST",
      "description": "Create a new discount .",
      "auth": {
        "type": "jwt",
        "roles": ["admin"]
      }
    },
    {
      "path": "/api/discounts",
      "method": "GET",
      "description": "Get all active  discounts .",
      "auth": {
        "type": "jwt",
        "roles": ["user", "admin"]
      }
    },
    {
      "path": "/api/discounts/:id",
      "method": "GET",
      "description": "Retrieve a single discount  by ID.",
      "params": ["id"],
      "auth": {
        "type": "jwt",
        "roles": ["admin"]
      }
    },
    {
      "path": "/api/discounts/:id",
      "method": "PUT",
      "description": "Update a discount by ID.",
      "params": ["id"],
      "auth": {
        "type": "jwt",
        "roles": ["admin"]
      }
    },
    {
      "path": "/api/discounts/:id",
      "method": "DELETE",
      "description": "Delete a discount by ID.",
      "params": ["id"],
      "auth": {
        "type": "jwt",
        "roles": ["admin"]
      }
    },
    {
      "path": "/api/discounts",
      "method": "DELETE",
      "description": "Delete all discounts.",
      "auth": {
        "type": "jwt",
        "roles": ["admin"]
      }
    }
  ]
}
